<h3>Somatória de 2 números inteiros</h3>

<script language="JavaScript">

var js_num1;
var js_num2;
var js_sum;

js_num1 = window.prompt('Enter the first number: ', 'Type here');
js_num2 = window.prompt('Enter the second number: ', 'Type here');

js_sum = parseInt(js_num1) + parseInt(js_num2);

document.write ('Result = ' + js_sum);
</script>
</body>
